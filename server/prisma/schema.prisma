generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      String   @default("user") // "user" or "admin"
  createdAt DateTime @default(now())
  
  tasks         Task[]
  projects      Project[]
  settings      Settings?
  focusSessions FocusSession[]
  habits        Habit[]
}

model Project {
  id        Int      @id @default(autoincrement())
  name      String
  color     String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks     Task[]
  createdAt DateTime @default(now())
}

model Task {
  id           Int      @id @default(autoincrement())
  title        String
  note         String?
  completed    Boolean  @default(false)
  estPomodoros Int      @default(1)
  actPomodoros Int      @default(0)
  
  projectId    Int?
  project      Project? @relation(fields: [projectId], references: [id])
  
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  focusSessions FocusSession[]
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Settings {
  id             Int     @id @default(autoincrement())
  userId         String  @unique
  user           User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  pomodoroTime   Int     @default(25)
  shortBreakTime Int     @default(5)
  longBreakTime  Int     @default(15)
  autoStart      Boolean @default(false)
}

model FocusSession {
  id          Int      @id @default(autoincrement())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  taskId      Int?
  task        Task?    @relation(fields: [taskId], references: [id], onDelete: SetNull)
  
  type        String   @default("pomodoro")  // "pomodoro" | "shortBreak" | "longBreak"
  duration    Int      // Duration in minutes
  completedAt DateTime @default(now())
}

model Habit {
  id        Int         @id @default(autoincrement())
  name      String
  emoji     String?     @default("âœ…")
  archived  Boolean     @default(false)
  userId    String
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  logs      HabitLog[]
  createdAt DateTime    @default(now())
}

model HabitLog {
  id        Int      @id @default(autoincrement())
  habitId   Int
  habit     Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)
  date      DateTime @db.Date  // Store only the date, no time
  completed Boolean  @default(true)
  
  @@unique([habitId, date])  // One log per habit per day
}

